{
  "compilerOptions": {
    "target": "ES2015",
    "module": "NodeNext",
    "sourceMap": true,
    "removeComments": false,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "allowJs": false,
    "checkJs": false,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    // "allowImportingTsExtensions": true,
    // "noEmit": true,
  },
}
